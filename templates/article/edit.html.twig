{% extends 'base.html.twig' %}

{% block title %}Modifier l'article{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <h1 class="card-title mb-4">Modifier l'article</h1>

                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.price, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.imageUrl, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.quantity, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-outline-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %} 