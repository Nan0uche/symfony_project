{% extends 'base.html.twig' %}

{% block title %}Administration - Modifier un utilisateur{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <h1 class="card-title mb-4">Modifier l'utilisateur {{ user.username }}</h1>

                {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.roles, {'attr': {'class': 'form-check-input'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.balance, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="{{ path('app_admin_users') }}" class="btn btn-outline-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %} 